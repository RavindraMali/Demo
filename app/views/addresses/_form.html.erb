<%= form_with model: @address do |form| %>
    <%= form.text_field :street1, :placeholder => "Line 1", :class => "form-control" %>
    <%= form.text_area :street2, :placeholder => "Line 2", :class => "form-control-textarea" %><br/>
    <%= form.text_field :city, :placeholder => "city", :class => "form-control" %>
    <%= form.text_field :state, :placeholder => "state", :class => "form-control" %>
    <%= form.text_field :country, :placeholder => "country", :class => "form-control" %>
    <%= form.text_field :pincode, :placeholder => "pincode", :class => "form-control" %>
    <%= form.submit %>
  <% end %>
  
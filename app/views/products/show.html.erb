<center>
<h3>Product Detail </h3>
<table class="table table-striped">

<thead>
  </thead>
  <tbody>
    <tr>
            <th scope="col">Name</th>
            <td><%= @product.name %></td>

            <th scope="col">Title</th>
            <td><%= @product.title %></td>

            <th>Category</th>
            <td><%= @product.category&.name %></td>
    </tr>
    <tr>
        <th scope="col">Description</th>
        <td colspan="3"><%= @product.description.to_s.html_safe %></td>
    </tr>
    <tr>
        <th>Code</th>
        <td><%= @product.code %></td>
        
        <th>Manufactured By</th>
        <td><%= @product.manufacture_by %></td>
    </tr>
    <tr>
        <th>Quentity</th>
        <td><%= @product.quantity %></td>

        <th scope="col">Price(Rate)</th>      
        <td><%= @product.price %></td>
    </tr>
    <tr>
        <th>Status</th>
        <td><%= @product.status %></td>
        
        <th>Created At</th>
        <td><%= @product.created_at.to_date %></td>
    </tr>
    <tr>
    <th>Image</th>
    <td>
      <% if @product.image_url %>
    <%= image_tag  @product.image_url , class: "img-responsive"%>
      <% end %>
    </td>

    </tr>
  </tbody>
</table>
</center>
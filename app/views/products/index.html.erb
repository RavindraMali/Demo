<table class="table table-striped">
<thead>
    <tr>
      <th scope="col">sr.No<% srno = 1 %></th>
      <th scope="col">Name</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th>Code</th>
      <th>Manufactured By</th>
      <th>Status</th>
      <th scope="col">Price(Rate)</th>
      <th>Quentity</th>
      <th>Image</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <th scope="row"><%= srno %><% srno+= 1 %></th>
      <td><%= product.name %></td>
      <td><%= product.title %></td>
      <td><%= raw(product.description) %></td>
      <td><%= product.code %></td>
      <td><%= product.manufacture_by %></td>
      <td><%= product.status %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
      <td><%= image_tag product.image_url(:thumb) , class: "img-responsive"%></td>
      <td><%= link_to "View", product, :class => "btn btn-primary text-black" %></td>
    </tr>
    <% end %>
  </tbody>
</table>